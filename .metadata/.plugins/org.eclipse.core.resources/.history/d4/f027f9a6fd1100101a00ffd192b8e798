package Project_001;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		System.out.println("Hello there");
		
		
		System.out.println("Welcome to the Task Tracker");
        System.out.println("Choose an option:");
        System.out.println("1. List all tasks.");
        System.out.println("2. List all tasks are done.");
        System.out.println("3. List all tasks are not done.");
        System.out.println("4. List all tasks are in progress.");
        
		System.out.print("Your option: ");
		Scanner scanner = new Scanner(System.in);
		String x = scanner.nextLine();
		System.out.println("Your input: " + x);
		System.out.println("Press Enter to exit...");
        scanner.nextLine();
		scanner.close();
	}

}
